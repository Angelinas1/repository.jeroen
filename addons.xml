<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.jeroen" name="Jeroen's Repository" version="1.0.1" provider-name="Jeroen">
	<requires>
		<import addon="xbmc.addon" version="12.0.0"/>
	</requires>
	<extension point="xbmc.addon.repository" name="Jeroen's Repository">
		<info>https://raw.githubusercontent.com/jeroenpardon/repository.jeroen/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/jeroenpardon/repository.jeroen/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/jeroenpardon/repository.jeroen/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Jeroen's Repository</summary>
		<description>Beta releases of the Grid skin and other add-ons.</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
		<license>Attribution-NonCommercial-ShareAlike 3.0 Unported</license>
		<source>https://github.com/jeroenpardon/repository.jeroen/</source>
		<website>http://jeroenpardon.github.io/</website>
	</extension>
</addon>

<addon id="resource.images.languageflags-flat" name="Language Flags Colour Flat" version="0.0.2" provider-name="Jeroen">
	<extension point="kodi.resource.images" compile="true" type="languageflags" />
	<requires>
		<import addon="kodi.resource" version="1.0.0"/>
	</requires>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Flat coloured icons with rounded corners</summary>
		<description lang="en">Flat coloured icons with rounded corners. Icons designed by Muharrem Senyil</description>
		<platform>all</platform>
		<license></license>
		<forum></forum>
		<website>https://dribbble.com/msenyil</website>
		<email></email>
		<source>https://github.com/jeroenpardon/resource.images.languageflags.colour-flat</source>
	</extension>
</addon>

	<addon id="resource.uisounds.grid" version="1.0.0" name="Grid UI Sounds" provider-name="Jeroen">
	<requires>
		<import addon="kodi.resource" version="1.0.0"/>
	</requires>
	<extension point="kodi.resource.uisounds"/>
		<extension point="kodi.addon.metadata">
		<summary lang="en">Grid UI sounds</summary>
		<description lang="en">Grid UI sounds</description>
		<platform>all</platform>
	</extension>
</addon>

	<addon id="resource.uisounds.refocus" version="1.0.0" name="reFocus UI Sounds" provider-name="Jeroen">
	<requires>
		<import addon="kodi.resource" version="1.0.0"/>
	</requires>
	<extension point="kodi.resource.uisounds"/>
		<extension point="kodi.addon.metadata">
		<summary lang="en">reFocus UI sounds</summary>
		<description lang="en">reFocus UI sounds</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.watchlist" name="Watchlist" provider-name="BigNoid,Unfledged" version="0.0.1">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
    <import addon="xbmc.json" version="6.0.0"/>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py" />
  <extension point="xbmc.addon.metadata">
    <description lang="en">Lists the next unwatched episodes or resumable movies</description>
    <platform>all</platform>
    <language />
  </extension>
</addon>
</addons>
